######################################################
# Base plugin config file for chorus
# All other configurations generated by plugin will be 
#  put under the plugin folder
# contains all options in two level yaml format
######################################################
# connection plugin, key is the conn_method, used by `connection.newConn`
connection:
  ssh: chorus.plugin.connection.SSH
  telnet: chorus.plugin.connection.Telnet
  console: chorus.plugin.connection.Console
  local: chorus.plugin.connection.Local

# device plugin config, key is the os name of the devices, used by `device.getDevice`
device:
  linux: chorus.plugin.device.linux.Linux

# topology plugin, key is the topology type, judged by `topo.Topo.addTopo`
topo:
  fixed: chorus.plugin.topo.FixedTopo

# repository plugin, used by chorus command line `--repo-type`
repo:
  local: chorus.repository.Local

# cli plugin, used to extend chorus cli capabilities
cli:
  run: chorus.cli.Run
  debug: chorus.cli.Debug
  log: chorus.cli.Log